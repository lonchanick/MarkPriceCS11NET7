@using Packt.Shared

@model SupplierAndCategory
@* @model IEnumerable<IEnumerable<int>> *@

<div class="container">
    <h1>Create Product</h1>

    <form method="post" action="">
        <div class="mb-3">
            <label asp-for="@Model.product.ProductName" class="form-label">Product Name</label>
            <input asp-for="@Model.product.ProductName" class="form-control" />
            <span asp-validation-for="@Model.product.ProductName" class="text-danger"></span>
        </div>

        @* <div class="mb-3">
            <label asp-for="@Model.product.SupplierId" class="form-label">ID Supplier</label>
            <input asp-for="@Model.product.SupplierId" class="form-control" />
            <span asp-validation-for="@Model.product.SupplierId" class="text-danger"></span>
        </div> *@

        <div class="mb-3">
            <label asp-for="@Model.product.SupplierId" class="form-label">ID Supplier</label>
            <select asp-for="@Model.product.SupplierId" class="form-control">
                @foreach(var option in Model.SupAndCat.ElementAt(0))
                {
                    <option value="@option">@option</option>
                }
            </select>
        </div>

        @* <div class="mb-3">
            <label asp-for="@Model.product.CategoryId" class="form-label">Category Id</label>
            <input asp-for="@Model.product.CategoryId" class="form-control" />
            <span asp-validation-for="@Model.product.CategoryId" class="text-danger"></span>
        </div> *@
        <div class="mb-3">
            <label asp-for="@Model.product.CategoryId" class="form-label">Categy ID</label>
            <select asp-for="@Model.product.CategoryId" class="form-control">
                @foreach (var option in Model.SupAndCat.ElementAt(1))
                {
                    <option value="@option">@option</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.product.QuantityPerUnit" class="form-label">Quantity Per Unit</label>
            <input asp-for="@Model.product.QuantityPerUnit" class="form-control" />
            <span asp-validation-for="@Model.product.QuantityPerUnit" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.product.UnitPrice" class="form-label">Unit Price</label>
            <input asp-for="@Model.product.UnitPrice" class="form-control" />
            <span asp-validation-for="@Model.product.UnitPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.product.UnitsInStock" class="form-label">Units In Stock</label>
            <input asp-for="@Model.product.UnitsInStock" class="form-control" />
            <span asp-validation-for="@Model.product.UnitsInStock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.product.UnitsOnOrder" class="form-label">Units On Order</label>
            <input asp-for="@Model.product.UnitsOnOrder" class="form-control" />
            <span asp-validation-for="@Model.product.UnitsOnOrder" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.product.ReorderLevel" class="form-label">Reorder Level</label>
            <input asp-for="@Model.product.ReorderLevel" class="form-control" />
            <span asp-validation-for="@Model.product.ReorderLevel" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="@Model.product.Discontinued" type="checkbox" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.product.Discontinued">Discontinued</label>
            <span asp-validation-for="@Model.product.Discontinued" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

