@page
@model Northwind.Web.Pages.SuppliersModel
@{
}

<div class="row">
    <h1 class="display-2">Suppliers</h1>

    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supp in Model.Suppliers)
            {
                <tr>
                    <td>@supp.CompanyName</td>
                    <td>@supp.Country </td>
                    <td>@supp.Phone </td>
                </tr>
            }
        </tbody>
    </table>
</div>

